{% extends "@App/public/base.html.twig" %}
{% block app_img %}
    <img id="front" src="{{ asset('/img/front.jpg') }}" alt="accueil">
{% endblock %}

{% block app_body %}
    <h3>Nouveaut√©s 2018</h3>

    <div class="row">
        {% for book in books %}
        <div class="col-md-3">
            <div class="card mb-3 box-shadow">
                <figure class="card-img-top">
                    <img src="{{ asset(book.file.pathname) }}" alt="">
                </figure>
                <div class="card-body">
                    <h5 class="card-title"><a href="{{ path('app_single', {'id': book.id}) }}">{{ book.title }}</a></h5>
                    <h6 class="card-subtitle mb-2 text-muted">{{ book.author.nameComplet }}</h6>
                    <p class="card-text">{{ book.content|truncate(55, true, ' ...')|raw }}</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a href="{{ path('app_single', {'id': book.id}) }}" class="btn btn-sm btn-outline-sevigne">Voir ce cours</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
{% endblock %}