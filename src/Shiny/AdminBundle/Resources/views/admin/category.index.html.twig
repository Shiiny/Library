{% extends '@Admin/admin/admin.dashboard.html.twig' %}

{% block breadcrumb %}<li class="breadcrumb-item active">Toutes les catégories</li>{% endblock %}

{% block content %}
    <div class="card mb-3">
        <div class="card-header d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
            <span><i class="fa fa-table"></i> Toutes les catégories</span>
            <div class="btn-toolbar mb-2 mb-md-0">
                <div class="btn-group mr-2">
                    <a href="{{ path('admin_add', {'param': 'category'}) }}" class="btn btn-sm btn-outline-secondary">Ajouter</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-sm" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>id</th>
                        <th>Titre</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for result in results %}
                        <tr>
                            <td>{{ result.id }}</td>
                            <td>{{ result.name }}</td>
                            <td>
                                <div class="btn-group mr-2">
                                    <a href="{{ path('admin_edit', {'param': 'category', 'id': result.id}) }}" class="btn btn-sm btn-outline-primary"><i class="fas fa-edit"></i></a>
                                    <form action="{{ path('admin_delete', {'param': 'category', 'id': result.id}) }}" method="post">
                                        <input type="hidden" name="form[_token]" value="{{ csrf_token('form') }}" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger"><i class="fa fa-trash"></i></button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">Actualisé le : {{ "now"|localizeddate('long', 'none') }}</div>
    </div>
{% endblock %}