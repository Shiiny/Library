{% extends ('@Admin/admin/admin.base.html.twig')%}

{% block admin_content %}
    <div class="container-fluid">
        {% for label, messages in app.flashes() %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}" role="alert">
                    <p class="message">Message flash : {{ message }}</p>
                </div>
            {% endfor %}
        {% endfor %}

        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('admin_homepage') }}">Tableau de bord</a>
            </li>
            {% block breadcrumb %}<li class="breadcrumb-item active">Accueil</li>{% endblock %}
        </ol>

        {% block content %}
            <div class="row">
                <div class="col-md-6" id="last-books">
                    <div class="card mb-3">
                        <div class="card-header">
                            <h4><i class="fa fa-table"></i> Derniers cours ajoutés</h4>
                        </div>
                        <div class="card-body">
                            {% for book in books %}
                                <div class="card book mb-3 ">
                                    <div class="card-header">
                                        <h5 class="card-title">{{ book.title }}</h5>
                                    </div>
                                    <div class="card-body">
                                        <h6 class="card-subtitle mb-2 text-muted">{{ book.author.firstName|upper }} {{ book.author.lastName }}</h6>
                                        <p class="card-text">{{ book.content }}</p>
                                        <a href="{{ path('admin_edit', {'param': 'book', 'id': book.id }) }}" class="btn btn-primary">Modifier</a>
                                        <a href="{{ path('app_single', {'param': 'book', 'id': book.id }) }}" class="btn btn-outline-primary">Voir</a>
                                    </div>
                                    <div class="card-footer small text-muted">Dernière mise à jour : {{ book.updatedAt|date("d-m-Y \\à h:i") }}</div>
                                </div>
                            {% endfor %}
                        </div>
                        <div class="card-footer small text-muted">Actualisé le : {{ "now"|date('d-m-Y') }}</div>
                    </div>
                </div>

                <div class="col-md-6" id="last-users">
                    <div class="card mb-3">
                        <div class="card-header">
                            <h4><i class="fa fa-table"></i> Membres récents</h4>
                        </div>
                        <div class="card-body">
                            <div class="card-deck">
                            {% for user in users %}
                                <div class="card col-lg-6">
                                    <div class="avatar">
                                        <img src="{{ asset('img/user.png') }}" alt="">
                                    </div>
                                    <div class="info">
                                        <div class="title">
                                            <a href="{{ path('admin_user_index') }}">{{ user.username }}</a>
                                        </div>
                                        <p>{{ user.email }}</p>
                                        <p class="small text-muted">Inscrit le : {{ user.dateRegister|date('d M Y') }}</p>
                                    </div>
                                </div>
                            {% endfor %}
                            </div>
                        </div>
                        <div class="card-footer small text-muted">Actualisé le : {{ "now"|date('d-m-Y') }}</div>
                    </div>
                </div>

            </div>
        {% endblock %}
    </div>
{% endblock %}