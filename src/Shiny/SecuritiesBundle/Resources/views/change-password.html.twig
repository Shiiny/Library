{% extends '@Securities/base.html.twig' %}

{% block body %}
    <div class="sign row justify-content-md-center">
        <div class="col-md-6">
            <div class="panel">
                <div class="panel-body">
                    {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_label(form.currentPassword, "Mot de passe actuel") }}
                        {{ form_widget(form.currentPassword, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.newPassword.first, "Nouveau mot de passe") }}
                        {{ form_widget(form.newPassword.first, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.newPassword.second, "Confirmez le nouveau mot de passe") }}
                        {{ form_widget(form.newPassword.second, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-6 col-sm-offset-3">
                                <input type="submit" name="change-submit" id="change-submit" tabindex="4" class="form-control btn btn-register" value="Envoyer">
                            </div>
                        </div>
                    </div>
                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
